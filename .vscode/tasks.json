{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Open in Browser",
            "type": "shell",
            "command": "start",
            "args": [
                "chrome",
                "http://angularcliapplication.localhost/"
            ],
            "presentation": {
                "reveal": "never",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Serve: apphost (4200)",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "serve:apphost"
            ],
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": false
            },
            "problemMatcher": [
                {
                    "owner": "ng-serve",
                    "fileLocation": [
                        "relative",
                        "${workspaceFolder}"
                    ],
                    "pattern": [
                        {
                            "regexp": "^(.+):(\\d+):(\\d+)\\s-\\s(error|warning)\\s(.+)$",
                            "file": 1,
                            "line": 2,
                            "column": 3,
                            "severity": 4,
                            "message": 5
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".*ng serve.*|.*Angular.*development.*server.*|.*Starting.*",
                        "endsPattern": ".*(Compiled successfully|listening on|Watch mode enabled|Local:\\s*http://).*"
                    }
                }
            ]
        },
        {
            "label": "Open apphost (4200) in Browser",
            "type": "shell",
            "command": "start",
            "args": [
                "chrome",
                "http://angularcliapplication.localhost:4200/"
            ],
            "presentation": {
                "reveal": "never",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Serve apphost + Open (4200)",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "start",
                "\"ng serve\"",
                "/D",
                "${workspaceFolder}",
                "cmd",
                "/c",
                "npm run serve:apphost",
                "&&",
                "timeout",
                "/t",
                "2",
                ">nul",
                "&&",
                "start",
                "\"\"",
                "chrome",
                "http://angularcliapplication.localhost:4200/"
            ],
            "presentation": {
                "reveal": "never",
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}
